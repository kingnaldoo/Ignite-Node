{
  "compilerOptions": {
    "target": "ES2021",                                     
    "lib": ["ES6"],                                        
    "module": "commonjs",                                
    "typeRoots": [
      "./node_modules/@types",
      ".src/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
